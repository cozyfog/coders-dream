{
    "TITLE" : "coders dream",
    "ICON"  : "src/icon.ico",

    "WINDOW-SIZE": [1280, 720],
    "FULLSCREEN" : false,
    "SCALED"     : false,
    "RESIZABLE"  : [true, true],

    "font-family": "Fira Code",
    "font-size"  : 12,
    "font-weight": "bold",

    "command": "py __file__",

    "indentation": 2,

    "save": "<Control-s>",
    "open": "<Control-o>",
    "run" : "<Control-b>",

    "BACKGROUND"  : "#2C3639",
    "SIDEBAR"  : "#293235",

    "STANDARD"    : "#DCD7C9",
    "COMMENT"     : "#A27B5C",
    "TYPES"       : "#3F4E4F",
    "BUILTIN"     : "#3F4E4F",
    "STRING"      : "#b1dc7a",
    "DEFINITION"  : "#3F4E4F",
    "KEYWORD"     : "#3F4E4F",
    "CLASSDEF"    : "#3F4E4F"
}