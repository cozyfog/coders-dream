{
    "TITLE" : "coders dream",
    "ICON"  : "src/icon.ico",

    "WINDOW-SIZE": [1280, 720],
    "FULLSCREEN" : false,
    "SCALED"     : false,
    "RESIZABLE"  : [true, true],

    "font-family": "Fira Code",
    "font-size"  : 12,
    "font-weight": "bold",

    "command": "py __file__",

    "indentation": 2,

    "save": "<Control-s>",
    "open": "<Control-o>",
    "run" : "<Control-b>",

    "BACKGROUND"  : "#282c34",
    "SIDEBAR"  : "#242930",

    "STANDARD"    : "#ffffff",
    "COMMENT"     : "#abb2bf",
    "TYPES"       : "#e5c07b",
    "BUILTIN"     : "#61afef",
    "STRING"      : "#98c379",
    "DEFINITION"  : "#c678dd",
    "KEYWORD"     : "#56b6c2",
    "CLASSDEF"    : "#56b6c2"
}