{
    "TITLE" : "coders dream",
    "ICON"  : "src/icon.ico",

    "WINDOW-SIZE": [1280, 720],
    "FULLSCREEN" : false,
    "SCALED"     : false,
    "RESIZABLE"  : [true, true],

    "font-family": "Fira Code",
    "font-size"  : 12,
    "font-weight": "bold",

    "command": "py __file__",

    "indentation": 2,

    "save": "<Control-s>",
    "open": "<Control-o>",
    "run" : "<Control-b>",

    "BACKGROUND"  : "#242424",
    "SIDEBAR"  : "#1d1d1d",

    "STANDARD"    : "#f6f3e8",
    "COMMENT"     : "#424242",
    "TYPES"       : "#e65c00",
    "BUILTIN"     : "#8ac6f2",
    "STRING"      : "#98c379",
    "DEFINITION"  : "#cc99cc",
    "KEYWORD"     : "#e65c00",
    "CLASSDEF"    : "#cc99cc"
}