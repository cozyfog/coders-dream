{
    "TITLE" : "coders dream",
    "ICON"  : "src/icon.ico",

    "WINDOW-SIZE": [1280, 720],
    "FULLSCREEN" : false,
    "SCALED"     : false,
    "RESIZABLE"  : [true, true],

    "font-family": "Fira Code",
    "font-size"  : 12,
    "font-weight": "bold",

    "command": "py __file__",

    "indentation": 2,

    "save": "<Control-s>",
    "open": "<Control-o>",
    "run" : "<Control-b>",

    "BACKGROUND"  : "#FAF0D7",
    "SIDEBAR"  : "#FFD9C0",

    "STANDARD"    : "#06283D",
    "COMMENT"     : "#FFD9C0",
    "TYPES"       : "#F4BFBF",
    "BUILTIN"     : "#8CC0DE",
    "STRING"      : "#C4DFAA",
    "DEFINITION"  : "#8CC0DE",
    "KEYWORD"     : "#F4BFBF",
    "CLASSDEF"    : "#8CC0DE"
}